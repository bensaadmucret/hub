{# templates/sections/_features.html.twig #}
{% if content %}
<section id="{{ id|default('features') }}" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">{{ content.title|default('Notre Approche Innovante') }}</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">{{ content.subtitle|default('MedCoach combine trois piliers essentiels pour votre réussite aux examens de médecine') }}</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
            {% for card in content.cards|default([]) %}
                <div class="feature-card bg-gray-50 rounded-xl p-8 transition duration-300 shadow-md hover:shadow-xl">
                    <div class="w-16 h-16 {{ card.icon_bg|default('bg-indigo-100') }} rounded-full flex items-center justify-center mb-6">
                        <i class="{{ card.icon|default('fas fa-user-graduate text-2xl text-indigo-600') }}"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">{{ card.title|default('Titre de la carte') }}</h3>
                    <ul class="space-y-3 text-gray-600">
                        {% for point in card.points|default([]) %}
                            <li class="flex items-start">
                                <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
                                <span>{{ point }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}
