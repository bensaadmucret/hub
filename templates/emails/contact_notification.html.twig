{# templates/emails/contact_notification.html.twig #}
<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Nouveau message de contact</title>
  <style>
    body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; color: #111827; }
    .container { max-width: 640px; margin: 0 auto; padding: 24px; background: #ffffff; }
    .title { font-size: 20px; font-weight: 700; margin: 0 0 16px; }
    .table { width: 100%; border-collapse: collapse; }
    .table th { text-align: left; color: #6b7280; font-weight: 600; padding: 8px 0; width: 160px; vertical-align: top; }
    .table td { padding: 8px 0; }
    .divider { height: 1px; background: #e5e7eb; margin: 16px 0; }
    .message { white-space: pre-wrap; }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="title">Nouveau message de contact</h1>

    <table class="table" role="presentation">
      <tr>
        <th>Nom</th>
        <td>{{ contact.name }}</td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{ contact.email }}</td>
      </tr>
      {% if contact.phone %}
      <tr>
        <th>Téléphone</th>
        <td>{{ contact.phone }}</td>
      </tr>
      {% endif %}
      <tr>
        <th>Sujet</th>
        <td>{{ contact.subject }}</td>
      </tr>
      <tr>
        <th>Message</th>
        <td class="message">{{ contact.message }}</td>
      </tr>
      <tr>
        <th>Date</th>
        <td>{{ contact.submittedAt|date('Y-m-d H:i') }}</td>
      </tr>
    </table>

    <div class="divider"></div>
    <p style="color:#6b7280; font-size: 12px;">Cet email vous est envoyé automatiquement par le formulaire de contact.</p>
  </div>
</body>
</html>
