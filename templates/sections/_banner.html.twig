{# templates/sections/_banner.html.twig #}
{% if content is defined and content is not null %}
{# Section Bannière avec dégradé de couleurs #}
<section 
    class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-16 md:py-24 lg:py-32"
    aria-label="Bannière principale"
>
    <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
            {# Titre principal #}
            <h1 class="text-3xl md:text-5xl font-bold mb-6 leading-tight">
                {{ content.title|default('Votre Coach Intelligent pour Réussir en Médecine')}}
            </h1>
            
            {# Sous-titre #}
            <p class="text-lg md:text-xl text-indigo-100 mb-8 max-w-2xl mx-auto">
                {{ content.subtitle|default('Combinaison unique d\'IA avancée, coaching personnalisé et approche bien-être pour maximiser vos chances de réussite.')}}
            </p>
        </div>
    </div>
</section>
{% endif %}