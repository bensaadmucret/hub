    <form method="post" class="space-y-6" data-controller="onboarding-validation" data-action="submit->onboarding-validation#submitForm">
        <input type="hidden" name="_token" value="{{ csrf_token('onboarding_step1') }}">
        <div>
            <label for="firstName" class="block text-sm font-medium text-gray-700">
                Prénom
            </label>
            <div class="mt-1">
                <input 
                    id="firstName" 
                    name="firstName" 
                    type="text" 
                    autocomplete="given-name" 
                    required 
                    value="{{ firstName }}"
                    class="appearance-none block w-full px-3 py-2 border {% if errors.firstName is defined %}border-red-500{% else %}border-gray-300{% endif %} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    data-onboarding-validation-target="input"
                    data-action="blur->onboarding-validation#validateField"
                >
                {% if errors.firstName is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.firstName }}</p>
                {% endif %}
            </div>
        </div>

        <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700">
                Nom
            </label>
            <div class="mt-1">
                <input 
                    id="lastName" 
                    name="lastName" 
                    type="text" 
                    autocomplete="family-name" 
                    required 
                    value="{{ lastName }}"
                    class="appearance-none block w-full px-3 py-2 border {% if errors.lastName is defined %}border-red-500{% else %}border-gray-300{% endif %} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    data-onboarding-validation-target="input"
                    data-action="blur->onboarding-validation#validateField"
                >
                {% if errors.lastName is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.lastName }}</p>
                {% endif %}
            </div>
        </div>

        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">
                Adresse email
            </label>
            <div class="mt-1">
                <input 
                    id="email" 
                    name="email" 
                    type="email" 
                    autocomplete="email" 
                    required 
                    value="{{ email }}"
                    class="appearance-none block w-full px-3 py-2 border {% if errors.email is defined %}border-red-500{% else %}border-gray-300{% endif %} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    data-onboarding-validation-target="input"
                    data-action="blur->onboarding-validation#validateEmail"
                >
                {% if errors.email is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.email }}</p>
                {% endif %}
            </div>
        </div>

        <div>
            <label for="password" class="block text-sm font-medium text-gray-700">
                Mot de passe
            </label>
            <div class="mt-1">
                <input 
                    id="password" 
                    name="password" 
                    type="password" 
                    autocomplete="new-password" 
                    required 
                    class="appearance-none block w-full px-3 py-2 border {% if errors.password is defined %}border-red-500{% else %}border-gray-300{% endif %} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    data-onboarding-validation-target="password"
                    data-action="blur->onboarding-validation#validatePassword"
                >
                {% if errors.password is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.password }}</p>
                {% endif %}
            </div>
            <p class="mt-1 text-xs text-gray-500">
                Le mot de passe doit contenir au moins 8 caractères.
            </p>
        </div>

        <div>
            <label for="confirmPassword" class="block text-sm font-medium text-gray-700">
                Confirmer le mot de passe
            </label>
            <div class="mt-1">
                <input 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    type="password" 
                    autocomplete="new-password" 
                    required 
                    class="appearance-none block w-full px-3 py-2 border {% if errors.confirmPassword is defined %}border-red-500{% else %}border-gray-300{% endif %} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                    data-onboarding-validation-target="confirmPassword"
                    data-action="blur->onboarding-validation#validatePasswordConfirmation"
                >
                {% if errors.confirmPassword is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.confirmPassword }}</p>
                {% endif %}
            </div>
        </div>

        <div>
            <button 
                type="submit" 
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
                Continuer
            </button>
        </div>
    </form>
